source /etc/vimrc

set nocompatible

" Tabs
set expandtab
set tabstop=2
set shiftwidth=2
set expandtab

" Syntax highlighting
syntax on

" Indenting
set cindent

" Line numbers
set relativenumber

" Statusbar
set ruler
set showcmd
set showmode

" Searching
set hlsearch
set incsearch
set ignorecase
set smartcase


