source /etc/vimrc

set nocompatible

" Tabs
set expandtab
set tabstop=2
set shiftwidth=2
set expandtab

" Syntax highlighting
syntax on

" Indenting
" set cindent -- disabled because it removes indentation for lines starting with '#'

" Line numbers
set number

" Statusbar
set ruler
set showcmd
set showmode

" Searching
set hlsearch
set incsearch
set ignorecase
set smartcase
